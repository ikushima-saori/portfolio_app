<% if current_customer != customer %>  <!--自分をフォローできないように設定-->
  <% if current_customer.following?(customer) %>
    <%= link_to "フォローを外す", relationships_path(customer.id), method: :delete, class: "btn btn-info"  %>
  <% else %>
    <%= link_to "フォローする", relationships_path(customer.id), method: :post, class: "btn btn-success" %>
  <% end %>
<% end %>