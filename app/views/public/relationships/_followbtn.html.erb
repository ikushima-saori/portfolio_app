<% if current_customer != customer %>  <!--自分をフォローできないように設定-->
  <% if current_customer.following?(customer) %>
    <%= link_to "フォローを外す", relationships_path(customer.id), method: :delete, remote: true , data: { turbolinks: false }, class: "follow-remove" %>
  <% else %>
    <%= link_to "フォローする", relationships_path(customer.id), method: :post, remote: true , data: { turbolinks: false }, class: "follow-add" %>
  <% end %>
<% end %>