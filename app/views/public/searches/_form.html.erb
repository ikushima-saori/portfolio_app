<div>
  <% if customer_signed_in? && current_customer.email != Customer::GUEST_USER_EMAIL %>
    <%= form_with url: search_path, method: :get, local: true do |f| %>
      <%= f.text_field :word %>
      <%= f.select :model, options_for_select({"会員" => "customer", "アイデア" => "idea"}) %>
      <%= f.select :method, options_for_select({"完全一致" => "perfect", "から始まる" => "forward", "で終わる" => "backward", "部分一致" => "partial"}) %>
      <%= f.submit "検索" %>
    <% end %>
  <% end %>
</div>