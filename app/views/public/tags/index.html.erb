<%= stylesheet_link_tag 'public/tags' %>
<div class="container">
  <div class="row">
    <h1>タグ一覧</h1>
  </div>

  <div class="row">
    <div>
      <% @tags.each do |tag| %>
        <%= link_to (tag.word.length > 5 ? "#{tag.word[0..4]}..." : tag.word), tag_path(tag), class: 'tag', title: tag.word %>
      <% end %>
    </div>
  </div>
</div>