<h3><%= notice %></h3>

<% if @customer == current_customer %>
  <h1>マイページ</h1>
<% else %>
  <h1>ユーザー詳細</h1>
<% end %>

<div>
  <%= image_tag @customer.get_profile_image(100,100) %>
  <%= @customer.name %>
  <% if @customer == current_customer %>
    <%= link_to "編集", edit_information_customers_path %>
  <% end %>
</div>
<div>
  好物 <%= @customer.preference %>
</div>
<div>
  苦手 <%= @customer.weak %>
</div>
<div>
  フォロー一覧
</div>
<div>
  <%= "アイデア数：#{@customer.ideas.count} " %>
  お気に入りのアイデア：〇
</div>
<div>
  アイデア一覧
  <%= render 'public/ideas/list', ideas: @ideas %>
</div>