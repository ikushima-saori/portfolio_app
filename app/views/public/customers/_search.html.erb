<%= stylesheet_link_tag 'public/customer_searches' %>
<div class="container">
  <div class="row">
      <h3>会員："<%= @word %>"の検索結果</h3>
  </div>

  <div class="row">
    <table>
      <tbody>
        <% customers.each do |customer| %>
          <tr>
            <td>
              <%= link_to customer_path(customer.id) do %>
                <%= image_tag customer.get_profile_image(100, 100) %>
                <span><%= customer.name %></span>
              <% end %>
            </td>
            <td>フォローボタン</td>
            <td>相互ならDMするボタン</td>
          </tr>
          <tr>
            <td>好物</td>
            <td><%= customer.preference %></td>
          </tr>
          <tr>
            <td>苦手</td>
            <td><%= customer.weak %></td>
          </tr>
          <tr>
            <td>フォロー一覧</td>
            <td><%= "アイデア数：#{customer.ideas.count} " %></td>
            <td><%= link_to "お気に入りアイデア数：#{customer.favorites.count}個", favorite_customer_path(customer.id) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="row">
    <%= paginate customers, class: "pagination" %>
  </div>
</div>
